<Window x:Class="GerenciadorAulas.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:models="clr-namespace:GerenciadorAulas.Models"
    xmlns:converters="clr-namespace:GerenciadorAulas.Converters"
    xmlns:helpers="clr-namespace:GerenciadorAulas.Helpers"
    Title="Gerenciador de Aulas 2.0"
    Height="720" Width="900"
    Background="{StaticResource BackgroundColor}" Foreground="{StaticResource ForegroundColor}"
    FontFamily="Segoe UI"

    AllowDrop="True"
    Drop="Window_Drop"
    PreviewDragOver="Window_PreviewDragOver"
    DragLeave="Window_DragLeave"
    Icon="pack://application:,,,/Resources/icon.ico">

    <Window.Resources>

        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <converters:AlternatingRowBrushConverter x:Key="ZebraConverter" Brush1="{StaticResource AlternateRowBrush1}" Brush2="{StaticResource AlternateRowBrush2}"/>

        <Style x:Key="ToolBarButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="{StaticResource TransparentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonHoverColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <helpers:DataContextProxy x:Key="DataContextProxy" DataContext="{Binding}" />

    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center">

                    <Button x:Name="BtnSelectFolder" Command="{Binding BrowseFoldersCommand}" ToolTip="Selecionar Pasta" Style="{StaticResource ToolBarButton}">
                        <Image Source="pack://application:,,,/Resources/folder.png" Stretch="Uniform"/>
                    </Button>

                    <Button Command="{Binding PlaySelectedItemCommand}" CommandParameter="{Binding SelectedItem, ElementName=treeModules}" ToolTip="Reproduzir Item Selecionado" Style="{StaticResource ToolBarButton}">
                        <Image Source="pack://application:,,,/Resources/play.png" Stretch="Uniform"/>
                    </Button>

                    <Button x:Name="BtnStop" Command="{Binding StopPlaybackCommand}" ToolTip="Parar Reprodução" Style="{StaticResource ToolBarButton}">
                        <Image Source="pack://application:,,,/Resources/stop.png" Stretch="Uniform"/>
                    </Button>

                    <Button Command="{Binding RefreshListCommand}" ToolTip="Atualizar Lista" Style="{StaticResource ToolBarButton}">
                        <Image Source="pack://application:,,,/Resources/refresh.png" Stretch="Uniform"/>
                    </Button>

                    <Button x:Name="BtnRemoveSelectedFolder" Command="{Binding ClearSelectedFolderCommand}" CommandParameter="{Binding SelectedItem, ElementName=treeModules}" ToolTip="Remover Pasta Selecionada" Style="{StaticResource ToolBarButton}">
                        <Image Source="pack://application:,,,/Resources/delete.png" Stretch="Uniform"/>
                    </Button>

                </StackPanel>

                <Button Grid.Row="1" Command="{Binding OpenConfigCommand}" HorizontalAlignment="Center" Margin="0,10,0,0" ToolTip="Abrir Configurações" Style="{StaticResource ToolBarButton}">
                    <Image Source="pack://application:,,,/Resources/settings.png" Stretch="Uniform"/>
                </Button>
            </Grid>

            <TabControl Grid.Column="1">
                <TabItem Header="Aulas">
                    <Border Background="{StaticResource PanelBackgroundColor}" CornerRadius="10" Padding="5">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDragging}" Value="True">
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0">
                                <Button Command="{Binding MarkSelectedCommand}" CommandParameter="{Binding ElementName=treeModules, Path=(helpers:MultiSelectTreeViewBehavior.SelectedItems)}" Margin="5" ToolTip="Marcar Selecionados" Style="{StaticResource ToolBarButton}">
                                    <Image Source="pack://application:,,,/Resources/check_box.png" Stretch="Uniform"/>
                                </Button>
                                <Button Command="{Binding UnmarkSelectedCommand}" CommandParameter="{Binding ElementName=treeModules, Path=(helpers:MultiSelectTreeViewBehavior.SelectedItems)}" Margin="5" ToolTip="Desmarcar Selecionados" Style="{StaticResource ToolBarButton}">
                                    <Image Source="pack://application:,,,/Resources/unchecked.png" Stretch="Uniform"/>
                                </Button>
                            </StackPanel>
                            <TreeView x:Name="treeModules"
                                Grid.Row="1"
                                ItemsSource="{Binding TreeRoot}"
                                Background="{StaticResource TransparentBrush}"
                                BorderThickness="0"
                                Margin="0"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                helpers:TreeViewExtensions.BindableSelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                helpers:TreeViewExtensions.IsMonitoringSelectedItem="True"
                                helpers:MultiSelectTreeViewBehavior.IsMultiSelectEnabled="True"
                                helpers:MultiSelectTreeViewBehavior.SelectedItems="{Binding SelectedItems}">

                                <TreeView.Resources>

                                    <Style TargetType="{x:Type TreeViewItem}">
                                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                                        <Setter Property="Foreground" Value="{StaticResource ForegroundColor}" />
                                        <Setter Property="Background" Value="{Binding
                                            RelativeSource={RelativeSource Self},
                                            Converter={StaticResource ZebraConverter}}" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="2,4,2,4"/>
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu x:Name="treeViewItemContextMenu">
                                                    <MenuItem Header="Play"
                                                              Command="{Binding Source={StaticResource DataContextProxy}, Path=DataContext.PlaySelectedItemCommand}"
                                                              CommandParameter="{Binding}"/>
                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="helpers:MultiSelectTreeViewBehavior.IsItemSelected" Value="True">
                                                <Setter Property="Background" Value="{StaticResource AccentColor}" />
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundColor}" />
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="helpers:MultiSelectTreeViewBehavior.IsItemSelected" Value="True"/>
                                                    <Condition Property="IsSelectionActive" Value="False"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="Background" Value="{StaticResource AlternateRowBrush2}"/>
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
                                            </MultiTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=HasItems}" Value="True">
                                                <Setter Property="helpers:TreeViewItemHelper.ExpanderForeground" Value="{StaticResource ForegroundColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>

                                    <HierarchicalDataTemplate DataType="{x:Type models:FolderItem}" ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <Image Source="pack://application:,,,/Resources/folder.png" Width="16" Height="16" Margin="0,0,5,0" />
                                            <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </HierarchicalDataTemplate>

                                    <DataTemplate DataType="{x:Type models:VideoItem}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <Image Source="pack://application:,,,/Resources/video.png" Width="14" Height="14" Margin="0,0,5,0" />
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>

                                </TreeView.Resources>
                            </TreeView>
                        </Grid>
                    </Border>
                </TabItem>
                <TabItem Header="Progresso">
                    <Grid Margin="10">
                        <ListView ItemsSource="{Binding FolderProgressList}"
                                  Background="#1f1f1f" BorderThickness="0"
                                  Foreground="White">
                            <ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:FolderProgressItem}">
                                    <Grid Margin="5" Width="Auto">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="25"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Name}"/>
                                        <ProgressBar Grid.Row="1"
                                                     Value="{Binding Progress}"
                                                     Minimum="0" Maximum="100"
                                                     Height="25"
                                                     HorizontalAlignment="Stretch"
                                                     Foreground="#0e639c"
                                                     Background="#2a2a2a"
                                                     Margin="0,5,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <ProgressBar Grid.Row="2" Height="6" Margin="0,10,0,0"
            IsIndeterminate="{Binding IsLoading}"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
            Foreground="{StaticResource AccentColor}"/>

    </Grid>
</Window>
