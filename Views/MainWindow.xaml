<Window x:Class="GerenciadorAulas.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:models="clr-namespace:GerenciadorAulas.Models"
    xmlns:converters="clr-namespace:GerenciadorAulas.Converters"
    xmlns:helpers="clr-namespace:GerenciadorAulas.Helpers"

    xmlns:libvlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
    Title="Gerenciador de Aulas 2.0"
    Height="{Binding Configuracoes.WindowHeight, Mode=TwoWay}"
    Width="{Binding Configuracoes.WindowWidth, Mode=TwoWay}"
    Left="{Binding Configuracoes.WindowLeft, Mode=TwoWay}"
    Top="{Binding Configuracoes.WindowTop, Mode=TwoWay}"
    WindowState="{Binding Configuracoes.WindowState, Mode=TwoWay}"
    WindowStartupLocation="CenterScreen"
    Background="{StaticResource BackgroundColor}" Foreground="{StaticResource ForegroundColor}"
    FontFamily="Segoe UI"

    AllowDrop="True"
    Drop="Window_Drop"
    PreviewDragOver="Window_PreviewDragOver"
    DragLeave="Window_DragLeave"
    Icon="pack://application:,,,/Resources/icon.ico">

    <Window.Resources>

        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:VolumeToIconConverter x:Key="VolumeToIconConverter" />
        <converters:LongToTimeSpanConverter x:Key="LongToTimeSpanConverter" />
        <converters:DoubleToFloatConverter x:Key="DoubleToFloatConverter" />

        <converters:AlternatingRowBrushConverter x:Key="ZebraConverter" Brush1="{StaticResource AlternateRowBrush1}" Brush2="{StaticResource AlternateRowBrush2}"/>

        <Style x:Key="ToolBarButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="{StaticResource TransparentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonHoverColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <helpers:DataContextProxy x:Key="DataContextProxy" DataContext="{Binding}" />

        <!-- Estilo para RepeatButton transparente (usado no Slider) -->
        <Style x:Key="RepeatButtonTransparent" TargetType="{x:Type RepeatButton}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Rectangle Fill="{TemplateBinding Background}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para o Slider de Progresso -->
        <Style TargetType="Slider" x:Key="VideoProgressSliderStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Track x:Name="PART_Track" Grid.Row="0">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Style="{StaticResource RepeatButtonTransparent}">
                                        <RepeatButton.Background>
                                            <SolidColorBrush Color="#4A90E2"/>
                                        </RepeatButton.Background>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Style="{StaticResource RepeatButtonTransparent}">
                                        <RepeatButton.Background>
                                            <SolidColorBrush Color="#333333"/>
                                        </RepeatButton.Background>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Width="12" Height="12">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{StaticResource AccentColor}" CornerRadius="6"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center">

                    <Button x:Name="BtnSelectFolder" Command="{Binding BrowseFoldersCommand}" ToolTip="Selecionar Pasta" Style="{StaticResource ToolBarButton}">
                        <Image Source="pack://application:,,,/Resources/folder.png" Stretch="Uniform"/>
                    </Button>

                    <Button Command="{Binding RefreshListCommand}" ToolTip="Atualizar Lista" Style="{StaticResource ToolBarButton}">
                        <Image Source="pack://application:,,,/Resources/refresh.png" Stretch="Uniform"/>
                    </Button>

                    <Button x:Name="BtnRemoveSelectedFolder" Command="{Binding ClearSelectedFolderCommand}" CommandParameter="{Binding SelectedItem, ElementName=treeModules}" ToolTip="Remover Pasta Selecionada" Style="{StaticResource ToolBarButton}">
                        <Image Source="pack://application:,,,/Resources/delete.png" Stretch="Uniform"/>
                    </Button>

                </StackPanel>

                <Button Grid.Row="1" Command="{Binding OpenConfigCommand}" HorizontalAlignment="Center" Margin="0,10,0,0" ToolTip="Abrir Configurações" Style="{StaticResource ToolBarButton}">
                    <Image Source="pack://application:,,,/Resources/settings.png" Stretch="Uniform"/>
                </Button>
            </Grid>

            <TabControl Grid.Column="1">
                <TabItem Header="Aulas">
                    <Border Background="{StaticResource PanelBackgroundColor}" CornerRadius="10" Padding="5">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDragging}" Value="True">
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0">
                                <Button Command="{Binding MarkSelectedCommand}" CommandParameter="{Binding ElementName=treeModules, Path=(helpers:MultiSelectTreeViewBehavior.SelectedItems)}" Margin="5" ToolTip="Marcar Selecionados" Style="{StaticResource ToolBarButton}">
                                    <Image Source="pack://application:,,,/Resources/check_box.png" Stretch="Uniform"/>
                                </Button>
                                <Button Command="{Binding UnmarkSelectedCommand}" CommandParameter="{Binding ElementName=treeModules, Path=(helpers:MultiSelectTreeViewBehavior.SelectedItems)}" Margin="5" ToolTip="Desmarcar Selecionados" Style="{StaticResource ToolBarButton}">
                                    <Image Source="pack://application:,,,/Resources/unchecked.png" Stretch="Uniform"/>
                                </Button>
                            </StackPanel>
                            <TreeView x:Name="treeModules"
                                Grid.Row="1"
                                ItemsSource="{Binding TreeRoot}"
                                Background="{StaticResource TransparentBrush}"
                                BorderThickness="0"
                                Margin="0"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                helpers:TreeViewExtensions.BindableSelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                helpers:TreeViewExtensions.IsMonitoringSelectedItem="True"
                                helpers:MultiSelectTreeViewBehavior.IsMultiSelectEnabled="True"
                                helpers:MultiSelectTreeViewBehavior.SelectedItems="{Binding SelectedItems}">

                                <TreeView.Resources>

                                    <Style TargetType="{x:Type TreeViewItem}">
                                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                                        <Setter Property="Foreground" Value="{StaticResource ForegroundColor}" />
                                        <Setter Property="Background" Value="{Binding
                                            RelativeSource={RelativeSource Self},
                                            Converter={StaticResource ZebraConverter}}" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="2,4,2,4"/>
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu x:Name="treeViewItemContextMenu">
                                                    <MenuItem Header="Play"
                                                              Command="{Binding Source={StaticResource DataContextProxy}, Path=DataContext.PlaySelectedItemCommand}"
                                                              CommandParameter="{Binding}"/>
                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="helpers:MultiSelectTreeViewBehavior.IsItemSelected" Value="True">
                                                <Setter Property="Background" Value="{StaticResource AccentColor}" />
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundColor}" />
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="helpers:MultiSelectTreeViewBehavior.IsItemSelected" Value="True"/>
                                                    <Condition Property="IsSelectionActive" Value="False"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="Background" Value="{StaticResource AlternateRowBrush2}"/>
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
                                            </MultiTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=HasItems}" Value="True">
                                                <Setter Property="helpers:TreeViewItemHelper.ExpanderForeground" Value="{StaticResource ForegroundColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>

                                    <HierarchicalDataTemplate DataType="{x:Type models:FolderItem}" ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <Image Source="pack://application:,,,/Resources/folder.png" Width="16" Height="16" Margin="0,0,5,0" />
                                            <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </HierarchicalDataTemplate>

                                    <DataTemplate DataType="{x:Type models:VideoItem}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <Image Source="pack://application:,,,/Resources/video.png" Width="14" Height="14" Margin="0,0,5,0" />
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>

                                </TreeView.Resources>
                            </TreeView>
                        </Grid>
                    </Border>
                </TabItem>
                <TabItem Header="Progresso">
                    <Grid Margin="10">
                        <ListView ItemsSource="{Binding FolderProgressList}"
                                  Background="#1f1f1f" BorderThickness="0"
                                  Foreground="White">
                            <ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:FolderProgressItem}">
                                    <Grid Margin="5" Width="Auto">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="25"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Name}"/>
                                        <ProgressBar Grid.Row="1"
                                                     Value="{Binding Progress}"
                                                     Minimum="0" Maximum="100"
                                                     Height="25"
                                                     HorizontalAlignment="Stretch"
                                                     Foreground="#0e639c"
                                                     Background="#2a2a2a"
                                                     Margin="0,5,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabItem>
                <TabItem Header="Player">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <libvlc:VideoView x:Name="VideoView" Grid.Row="0" Background="Black" />

                        <!-- Controles do Player -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Barra de Progresso do Vídeo -->
                            <Grid Grid.Row="0" Margin="5,0,5,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding CurrentTime, Converter={StaticResource LongToTimeSpanConverter}}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <Slider Grid.Column="1" Value="{Binding PlaybackPosition, Mode=TwoWay}"
                                        Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1"
                                        IsMoveToPointEnabled="True"
                                        VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                        Margin="0,0,5,0"
                                        Style="{StaticResource VideoProgressSliderStyle}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding StartSeekCommand}"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                            <i:InvokeCommandAction Command="{Binding EndSeekCommand}"/>
                                            <i:InvokeCommandAction Command="{Binding SeekCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Slider}}, Path=Value, Converter={StaticResource DoubleToFloatConverter}}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Slider>
                                <TextBlock Grid.Column="2" Text="{Binding TotalTime, Converter={StaticResource LongToTimeSpanConverter}}" VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Controles de Reprodução e Volume -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,0,5,0">
                                <Button Command="{Binding PlayPauseCommand}" ToolTip="Play/Pause" Style="{StaticResource ToolBarButton}">
                                    <Image Stretch="Uniform">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="pack://application:,,,/Resources/play.png"/> <!-- Default source -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                        <Setter Property="Source" Value="pack://application:,,,/Resources/pause.png"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsPlaying}" Value="False">
                                                        <Setter Property="Source" Value="pack://application:,,,/Resources/play.png"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Button>
                                <Button Command="{Binding StopPlayerCommand}" ToolTip="Parar" Style="{StaticResource ToolBarButton}">
                                    <Image Source="pack://application:,,,/Resources/stop.png" Stretch="Uniform"/>
                                </Button>
                                <!-- Controles de Volume -->
                                <Button Command="{Binding ToggleMuteCommand}" ToolTip="Mudo" Style="{StaticResource ToolBarButton}">
                                    <Image Source="pack://application:,,,/Resources/mute.png" Stretch="Uniform"/>
                                </Button>
                                <Image Source="{Binding Volume, Converter={StaticResource VolumeToIconConverter}}" Width="28" Height="28" Margin="10,0,5,0" VerticalAlignment="Center"/>
                                <Slider Width="100" Minimum="0" Maximum="100" Value="{Binding Volume, Mode=TwoWay}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <ProgressBar Grid.Row="2" Height="6" Margin="0,10,0,0"
            IsIndeterminate="{Binding IsLoading}"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
            Foreground="{StaticResource AccentColor}"/>

    </Grid>
</Window>
