<Window x:Class="GerenciadorAulas.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:models="clr-namespace:GerenciadorAulas.Models"
    xmlns:converters="clr-namespace:GerenciadorAulas.Converters"
    xmlns:helpers="clr-namespace:GerenciadorAulas.Helpers"
    Title="Gerenciador de Aulas 2.0"
    Height="720" Width="900"
    Background="#1e1e1e" Foreground="White"
    FontFamily="Segoe UI"

    AllowDrop="True"
    Drop="Window_Drop"
    PreviewDragOver="Window_PreviewDragOver"
    DragLeave="Window_DragLeave"
    Icon="pack://application:,,,/Resources/icon.ico">

    <Window.Resources>

        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <converters:AlternatingRowBrushConverter x:Key="ZebraConverter" Brush1="#252526" Brush2="#2D2D30"/>

        <Style TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
 <Grid.Style>
 <Style TargetType="Grid">
 <Style.Triggers>
 <DataTrigger Binding="{Binding IsLoading}" Value="True">
 <Setter Property="IsEnabled" Value="False"/>
 </DataTrigger>
 </Style.Triggers>
 </Style>
 </Grid.Style>
 <Grid.ColumnDefinitions>
    <ColumnDefinition Width="60"/>  <ColumnDefinition Width="*"/>
</Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center">

                    <Button x:Name="BtnSelectFolder" Command="{Binding BrowseFoldersCommand}">
                        <Image Source="pack://application:,,,/Resources/folder.png" Stretch="Uniform"/>
                    </Button>

                    <Button Command="{Binding PlaySelectedItemCommand}" CommandParameter="{Binding SelectedItem, ElementName=treeModules}">
    					<Image Source="pack://application:,,,/Resources/play.png" Stretch="Uniform"/>
					</Button>

                    <Button x:Name="BtnStop" Command="{Binding StopPlaybackCommand}">
                        <Image Source="pack://application:,,,/Resources/stop.png" Stretch="Uniform"/>
                    </Button>

                    <Button Command="{Binding RefreshListCommand}">
                        <Image Source="pack://application:,,,/Resources/refresh.png" Stretch="Uniform"/>
                    </Button>

                    <Button x:Name="BtnRemoveSelectedFolder" Command="{Binding ClearSelectedFolderCommand}" CommandParameter="{Binding SelectedItem, ElementName=treeModules}">
                        <Image Source="pack://application:,,,/Resources/delete.png" Stretch="Uniform"/>
                    </Button>

                    <Button x:Name="BtnFolderProgress" Command="{Binding ShowProgressCommand}">
                        <Image Source="pack://application:,,,/Resources/progress.png" Stretch="Uniform"/>
                    </Button>

                </StackPanel>

                <Button Grid.Row="1" Command="{Binding OpenConfigCommand}" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Image Source="pack://application:,,,/Resources/settings.png" Stretch="Uniform"/>
                </Button>
            </Grid>

            <Border Grid.Column="1" Background="#252526" CornerRadius="10" Padding="5">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDragging}" Value="True">
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="#4A90E2"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TreeView x:Name="treeModules"
                    Grid.Column="1"
                    ItemsSource="{Binding TreeRoot}"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="0"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    helpers:TreeViewExtensions.BindableSelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                    helpers:TreeViewExtensions.IsMonitoringSelectedItem="True">

                    <TreeView.Resources>

                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />

                            <Setter Property="Foreground" Value="White" />

                            <Setter Property="Background" Value="{Binding
                                RelativeSource={RelativeSource Self},
                                Converter={StaticResource ZebraConverter}}" />

                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="2,4,2,4"/>

                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#4A90E2" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="True"/>
                                        <Condition Property="IsSelectionActive" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background" Value="#2d2d30"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </MultiTrigger>

                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=HasItems}" Value="True">
                                    <Setter Property="helpers:TreeViewItemHelper.ExpanderForeground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>


                        <HierarchicalDataTemplate DataType="{x:Type models:FolderItem}"
                                                 ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <Image Source="pack://application:,,,/Resources/folder.png" Width="16" Height="16" Margin="0,0,5,0" />
                                <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" />
                            </StackPanel>
                        </HierarchicalDataTemplate>

                        <DataTemplate DataType="{x:Type models:VideoItem}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <Image Source="pack://application:,,,/Resources/video.png" Width="14" Height="14" Margin="0,0,5,0" />
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>

                    </TreeView.Resources>
                </TreeView>

            </Border>
        </Grid>

        <ProgressBar Grid.Row="2" Height="6" Margin="0,10,0,0"
            IsIndeterminate="{Binding IsLoading}"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
            Foreground="#4A90E2"/>

    </Grid>
</Window>
