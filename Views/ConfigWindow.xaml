<Window x:Class="GerenciadorAulas.Views.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurações"
        Height="300"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1e1e1e"
        Foreground="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Background="Transparent" BorderThickness="0">
            <TabItem Header="Geral">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Reprodução contínua -->
                    <CheckBox x:Name="chkReproducaoContinua" Content="Reprodução contínua"
                              Grid.Row="0" Grid.Column="0" Margin="0,10,0,0"
                              Checked="chkReproducaoContinua_Checked"
                              Unchecked="chkReproducaoContinua_Unchecked"
                              Foreground="White"/>

                    <!-- MPV Fullscreen -->
                    <CheckBox x:Name="chkFullscreenMPV" Content="MPV em tela cheia"
                              Grid.Row="1" Grid.Column="0" Margin="0,10,0,0"
                              Foreground="White"/>

                    <!-- Minimizar para Bandeja -->
                    <CheckBox x:Name="chkMinimizeToTray" Content="Minimizar para bandeja ao fechar"
                              Grid.Row="2" Grid.Column="0" Margin="0,10,0,0"
                              Foreground="White"/>

                    <!-- Caminho do MPV -->
                    <Label Content="Caminho do MPV:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Foreground="White"/>
                    <TextBox x:Name="txtMPVPath" Grid.Row="3" Grid.Column="0" Margin="120,0,5,0"/>
                    <Button Content="Selecionar..." Grid.Row="3" Grid.Column="1" Click="BtnSelecionarMPV_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Backup">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Fazer Backup Local" Command="{Binding BackupCommand}" Margin="5" Padding="10,5"/>
                    <Button Content="Restaurar Backup Local" Command="{Binding RestoreCommand}" Margin="5" Padding="10,5"/>
                    <Button Content="Salvar no Google Drive" Command="{Binding BackupToCloudCommand}" Margin="5" Padding="10,5"/>
                    <Button Content="Restaurar do Google Drive" Command="{Binding RestoreFromCloudCommand}" Margin="5" Padding="10,5"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Botões Salvar / Cancelar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Salvar" Width="75" Margin="5,0,0,0" Click="BtnSalvar_Click"/>
            <Button Content="Cancelar" Width="75" Margin="5,0,0,0" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
