<Window x:Class="GerenciadorAulas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciador de Aulas"
        Height="600"
        Width="800">
        <Grid Margin="10">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Linha superior: botão + caminho -->
                <StackPanel Orientation="Horizontal"
                                Margin="0 0 0 10">
                        <Button x:Name="BtnSelectFolder"
                                Content="Selecionar Pasta"
                                Width="130"
                                Height="30"
                                Margin="0 0 10 0"
                                Click="BtnSelectFolder_Click"/>
                        <TextBox x:Name="txtFolderPath"
                                 Width="600"
                                 Height="30"
                                 IsReadOnly="True"
                                 VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- TreeView de pastas e vídeos -->
                <TreeView x:Name="treeModules"
                          Grid.Row="1"/>
        </Grid>
</Window>
