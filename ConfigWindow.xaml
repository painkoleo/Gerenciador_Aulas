<Window x:Class="GerenciadorAulas.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurações"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1e1e1e"
        Foreground="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!-- Reprodução contínua -->
        <CheckBox x:Name="chkReproducaoContinua" Content="Reprodução contínua"
                  Grid.Row="1" Grid.Column="0" Margin="0,10,0,0"
                  Checked="chkReproducaoContinua_Checked"
                  Unchecked="chkReproducaoContinua_Unchecked"/>

        <!-- MPV Fullscreen -->
        <CheckBox x:Name="chkFullscreenMPV" Content="MPV em tela cheia"
                  Grid.Row="2" Grid.Column="0" Margin="0,10,0,0"/>

        <!-- Caminho do MPV -->
        <Label Content="Caminho do MPV:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtMPVPath" Grid.Row="3" Grid.Column="0" Margin="120,0,5,0"/>
        <Button Content="Selecionar..." Grid.Row="3" Grid.Column="1" Click="BtnSelecionarMPV_Click"/>

        <!-- Botões Salvar / Cancelar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="5" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <Button Content="Salvar" Width="75" Margin="5,0,0,0" Click="BtnSalvar_Click"/>
            <Button Content="Cancelar" Width="75" Margin="5,0,0,0" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
